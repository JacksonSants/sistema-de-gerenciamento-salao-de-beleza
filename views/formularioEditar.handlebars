<main>
    <div class="container">
        <div class="row">
            <div class="col-6 offset-3">
                <form action="/editar" method="post" enctype="multipart/form-data" class="input-editar">
                    <div class="img-edit mb-4">
                        <img src="../imagens/{{produto.imagem}}">
                    </div>

                    <input type="hidden" name="nomeImagem" value="{{produto.imagem}}">
                    <input type="hidden" name="codigo" value="{{produto.codigo}}">

                    <div class="mb-2">
                        <input type="text" name="nome" value="{{produto.nome}}" class="form-control input-box"
                            placeholder="Serviço">
                    </div>

                    <div class="mb-2">
                        <input type="number" value="{{produto.valor}}" name="valor" class="form-control input-box"
                            placeholder="Valor R$">
                    </div>


                    <h5>categoria atual - "{{produto.categoria}}"</h5>


                    {{!-- MENU CATEGORIA --}}
                    <div class=" mp-3 mb-2">
                        <label for="categoria" class="form-label">Categoria</label>
                        {{!-- MENU CATEGORIA --}}
                        <select name="categoria" value="{{produto.categoria}}" id="select-cat" class="form-control">
                            <option id="select-cat" value="">categoria</option>
                            <option id="select-cat" value="Feminino">Feminino</option>
                            <option id="select-cat" value="Marculino">Masculino</option>
                            <option id="select-cat" value="Infantil">Infantil</option>
                        </select>
                    </div>


                    <div class="mb-2">
                        <input type="file" value="" name="imagem" class="form-control input-box" placeholder="Adicione uma imagem da serviço">
                    </div>

                    <input type="submit" class="btn btn-primary mb-3" value="Alterar">
                    <a href="/" class="btn btn-secondary">Cancelar</a>
                </form>
            </div>
        </div>
    </div>
</main>