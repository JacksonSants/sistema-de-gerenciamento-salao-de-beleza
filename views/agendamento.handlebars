                    <h1>
                        Agendamento
                    </h1>

                    <div class="mb-2">
                        <label for="nome" class="form-label">Data</label>
                        <input type="date" value="" name="dataAgendamento" class="form-control input-box"
                            placeholder="Serviço">
                    </div>

                    <select name="categoria" id="select-cat" class="form-control">
                        <option id="select-cat" value="08:00">08:00</option>
                        <option id="select-cat" value="10:00">09:00</option>
