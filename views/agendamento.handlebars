                        <option id="select-cat" value="18:00">15:00</option>
                        <option id="select-cat" value="20:00">16:00</option>
                        <option id="select-cat" value="20:00">17:00</option>
                        <option id="select-cat" value="20:00">18:00</option>
                        <option id="select-cat" value="20:00">19:00</option>
                        <option id="select-cat" value="20:00">20:00</option>

                    </select>

                    <div class="mb-2">
                        <label for="servico" class="form-label">Serviço</label>
                        <select name="categoria" id="select-cat" class="form-control">
                            <option selected>Selecione seu funcionario</option>
                            <option value="1">One</option>

                        </select>
                    </div>

                    <input type="submit" class="btn btn-primary" value="Cadastrar">
                </form>
            </div>
        </div>
    </div>
</main>